
<div class="notice">
<% if flash[:succces] %>
  <p><%= flash[:succces] %></p>
<% end %>
</div>


<h1>Books</h1>

<div class="t&b-table">

  <table>
    <thead>
	  <tr>
	    <th>Title</th>
	    <th>Body</th>
	  </tr>
	</thead>


	<tbody>
      <% @books.each do |book| %>
	  <tr>
	  	<td><%= book.title %></td>
		<td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id), class:"show_#{book.id}" %></td>
	    <td><%= link_to "Edit", edit_book_path(book.id),class:"edit_#{book.id}" %></td>
	    <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?'},class:"destroy_#{book.id}" %></td>
	  </tr>
	 <% end %>
    </tbody>

  </table>

</div>







<%= form_for(@book) do |f| %>
    <h2>New book</h2>

    <h4>Title</h4>
    <%= f.text_field :title, class:"book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, class:"book_body" %>

    <p><%= f.submit 'Create Book' %></p>
<% end %>